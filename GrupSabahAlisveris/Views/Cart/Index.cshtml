@model GrupSabahAlisveris.Dto.CartViewModel
@{
    ViewData["Title"] = "Sepet";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Shopping Cart</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Shopping Cart</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Cart Start -->
@if(Model.CartItems.Count>0)
{
    


<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Ürün Fiyatı</th>
                        <th>Adedi</th>
                        <th>Toplam</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach(var item in Model.CartItems)
                    {
                    <tr>
                                <td class="align-middle"><img src="/Product_Images/@item.Image" alt="" style="width: 50px;"> @item.ProductName</td>
                        <td class="align-middle">@item.Price</td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <div class="input-group-btn">
              <button data-id="@item.ProductId" class="btn btn-sm btn-primary btn-minus azalt">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm bg-secondary text-center" value="1">
                                <div class="input-group-btn">
            <button data-id="@item.ProductId" class="btn btn-sm btn-primary btn-plus arttir">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                                <td class="align-middle">
                                      @{
                                        decimal toplam;
                                        toplam = item.Price * item.Quantity;

                                      }
                                      @toplam
                                </td>
                                <td class="align-middle">
                                    <button data-id="@item.ProductId" class="btn btn-sm btn-primary silme">
                            <i class="fa fa-times" ></i>
                            
                        </button></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <form class="mb-5" action="">
                <div class="input-group">
                    <input type="text" class="form-control p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Subtotal</h6>
                        <h6 class="font-weight-medium">$150</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">$10</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Total</h5>
                        <h5 class="font-weight-bold">$160</h5>
                    </div>
                    <button class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
}
else
{
    <h2>Sepete Ürün Yok !!!</h2>
}
<!-- Cart End -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    $(document).ready(function () {
        $(".silme").click(function () { 
            let urunId = $(this).attr("data-id");

            $.ajax({
               type:'GET',
               url:'/Cart/Remove',
                data: {id:urunId},
                success:function(data){
                   
                    alert("İşlem Başarılı");
                    window.location.href = '/Cart/Index';
                },
            });
        
        });
    
    });
</script>